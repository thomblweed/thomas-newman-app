{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm clean:build && pnpm build:css && pnpm build:remix",
    "build:remix": "remix build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev": "run-p \"dev:*\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:remix": "remix dev --port 2000",
    "clean:build": "if [ -d \"public/build\" ]; then rm -rf \"public/build\"; fi",
    "deps:up": "docker compose up -d",
    "deps:down": "docker compose down --rmi local",
    "deps:restart": "pnpm deps:down && pnpm deps:up"
  },
  "dependencies": {
    "@netlify/functions": "^1.2.0",
    "@remix-run/netlify": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "axios": "^0.27.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@tailwindcss/forms": "^0.5.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "cssnano": "^5.1.13",
    "eslint": "^8.22.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=14"
  }
}
